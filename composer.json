        "illuminate/notifications": "~9.0",
        "illuminate/support": "~9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Notion\\": "src"
        }
    },
    "autoload-dev": {
