    "homepage": "https://github.com/laravel-notification-channels/notion",
    "license": "MIT",
    "authors": [
        {
            "name": "Ostap",
            "email": "osbre@protonmail.com",
            "homepage": ":author_website",
            "role": "Developer"
        }
